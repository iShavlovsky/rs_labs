{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./src/*"
      ],
      "@assets/*": [
        "./src/assets/*"
      ],
      "@images/*": [
        "./src/assets/images/*"
      ],
      "@fonts/*": [
        "./src/assets/fonts/*"
      ],
      "@api/*": [
        "./src/api/*"
      ],
      "@store/*": [
        "./src/store/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@composables/*": [
        "./src/composables/*"
      ],
      "@injections/*": [
        "./src/injections/*"
      ],
      "@interfaces/*": [
        "./src/interfaces/*"
      ],
      "@middlewares/*": [
        "./src/middlewares/*"
      ],
      "@plugins/*": [
        "./src/plugins/*"
      ],
      "@router/*": [
        "./src/router/*"
      ],
      "@utility/*": [
        "./src/utility/*"
      ],
      "@pages/*": [
        "./src/pages/*"
      ],
      "@layouts/*": [
        "./src/layouts/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
