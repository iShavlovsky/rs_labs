{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Articles",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "minLength": 1,
      "unique": true,
      "required": true,
      "default": "title article"
    },
    "description": {
      "type": "text",
      "default": "basic description",
      "minLength": 1,
      "required": true
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "timeRead": {
      "type": "integer",
      "min": 1,
      "required": true,
      "default": 5
    },
    "writtenBy": {
      "type": "string",
      "required": true,
      "minLength": 1,
      "default": "ALEX VOINOVITCH"
    },
    "date": {
      "type": "date",
      "default": "2023-10-01",
      "required": true
    },
    "body": {
      "type": "customField",
      "options": {
        "preset": "custom"
      },
      "required": true,
      "customField": "plugin::ckeditor5.CKEditor"
    },
    "users_permissions_user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user",
      "private": true
    },
    "slug": {
      "type": "customField",
      "options": {
        "pattern": "title"
      },
      "customField": "plugin::slug.slug"
    }
  }
}
